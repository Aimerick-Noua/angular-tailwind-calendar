import { CommonModule, DatePipe, NgFor, NgIf } from '@angular/common';
import { Component, OnInit } from '@angular/core';
import {
  FormBuilder,
  FormGroup,
  ReactiveFormsModule,
  Validators,
} from '@angular/forms';

@Component({
  selector: 'app-titularization-after-trial',
  templateUrl: './titularization-after-trial.component.html',
  styleUrls: ['./titularization-after-trial.component.css'],
  imports: [CommonModule, ReactiveFormsModule],
  standalone: true,
})
export class TitularizationAfterTrialComponent implements OnInit {
  currentStep = 1;
  totalSteps = 3;
  progressPercentage = 33;

  titularizationForm: FormGroup;
  isSubmitting = false;

  // Options for dropdowns
  civiliteOptions = [
    { value: 'monsieur', label: 'Monsieur', icon: 'mars' },
    { value: 'madame', label: 'Madame', icon: 'venus' },
  ];

  functionOptions = [
    'Développeur Fullstack',
    'Chef de Projet',
    'Analyste Business',
    'Responsable RH',
    'Comptable',
    'Ingénieur Système',
  ];

  directionOptions = [
    'Direction Technique',
    'Direction Commerciale',
    'Direction des Ressources Humaines',
    'Direction Financière',
    'Direction Administrative',
  ];

  siteOptions = [
    'Ferké 2',
    'Abidjan Plateau',
    'Yamoussoukro',
    'San Pedro',
    'Bouaké',
  ];

  constructor(private fb: FormBuilder) {
    this.titularizationForm = this.fb.group({
      // Step 1: Employee Information
      matricule: [
        '',
        [Validators.required, Validators.pattern(/^[A-Z0-9]{6,10}$/)],
      ],
      civilite: ['monsieur', Validators.required],
      nom: ['', [Validators.required, Validators.minLength(2)]],
      prenoms: ['', [Validators.required, Validators.minLength(2)]],
      fonction: ['', Validators.required],
      direction: ['', Validators.required],
      site: ['', Validators.required],
      reference: [''],
      dateDuJour: ['', Validators.required],

      // Step 2: Contract Details
      dateDebutEssai: ['', Validators.required],
      dateFinEssai: ['', Validators.required],
      dateTitularisation: ['', Validators.required],
      notesAdditionnelles: [''],

      // Step 3: Validation
      generatePDF: [true],
      sendEmail: [false],
      emailAddress: [''],
    });
  }

  ngOnInit(): void {
    this.updateFormDate();
  }

  updateFormDate(): void {
    const today = new Date().toISOString().split('T')[0];
    this.titularizationForm.patchValue({ dateDuJour: today });
  }

  nextStep(): void {
    if (this.currentStep < this.totalSteps && this.validateCurrentStep()) {
      this.currentStep++;
      this.updateProgress();
      this.scrollToTop();
    }
  }

  prevStep(): void {
    if (this.currentStep > 1) {
      this.currentStep--;
      this.updateProgress();
      this.scrollToTop();
    }
  }

  validateCurrentStep(): boolean {
    switch (this.currentStep) {
      case 1:
        const step1Fields = [
          'matricule',
          'civilite',
          'nom',
          'prenoms',
          'fonction',
          'direction',
          'site',
        ];
        return step1Fields.every(
          (field) => this.titularizationForm.get(field)?.valid
        );
      case 2:
        const step2Fields = [
          'dateDebutEssai',
          'dateFinEssai',
          'dateTitularisation',
        ];
        return step2Fields.every(
          (field) => this.titularizationForm.get(field)?.valid
        );
      default:
        return true;
    }
  }

  updateProgress(): void {
    this.progressPercentage = (this.currentStep / this.totalSteps) * 100;
  }

  scrollToTop(): void {
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }

  generateMatricule(): void {
    const randomMatricule = 'EMP' + Math.floor(10000 + Math.random() * 90000);
    this.titularizationForm.patchValue({ matricule: randomMatricule });
  }

  generateLetter(): void {
    if (this.titularizationForm.valid) {
      this.isSubmitting = true;

      // Simulate API call
      setTimeout(() => {
        console.log('Form Data:', this.titularizationForm.value);
        this.isSubmitting = false;

        // Generate and download PDF
        this.downloadPDF();

        // Show success message
        this.showSuccessMessage();
      }, 1500);
    }
  }

  downloadPDF(): void {
    // Implement PDF generation logic here
    const blob = new Blob(['PDF content'], { type: 'application/pdf' });
    const url = window.URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = `lettre_titularisation_${
      this.titularizationForm.get('matricule')?.value
    }.pdf`;
    a.click();
    window.URL.revokeObjectURL(url);
  }

  showSuccessMessage(): void {
    alert('Lettre de titularisation générée avec succès!');
  }

  previewLetter(): void {
    // Open preview modal or new window
    const formData = this.titularizationForm.value;
    const previewContent = `
      Ferké, le ${formData.dateDuJour}
      
      Matricule : ${formData.matricule}
      
      Nom et prénoms : ${formData.nom} ${formData.prenoms}
      
      Fonction : ${formData.fonction}
      
      Direction : ${formData.direction}
      
      Site : ${formData.site}
      
      Nos réf. : ${formData.reference}
      
      Objet : Titularisation après essai
      
      ${formData.civilite === 'monsieur' ? 'Monsieur' : 'Madame'},
      
      Nous avons le plaisir de vous annoncer que votre période d'essai a été jugée satisfaisante.
      
      En conséquence, nous vous confirmons par la présente votre titularisation au poste
      de ${formData.fonction} à la ${formData.direction} à ${formData.site} 
      après votre essai à compter du ${formData.dateTitularisation}.
      
      Vos situations salariale et catégorielle restent inchangées.
      
      Dans l'espoir de la poursuite d'une collaboration fructueuse,
      
      Veuillez agréer, Monsieur ou Madame, nos salutations distinguées.
      
      LE DIRECTEUR GÉNÉRAL
    `;

    const previewWindow = window.open('', '_blank');
    if (previewWindow) {
      previewWindow.document.write(`
        <!DOCTYPE html>
        <html>
        <head>
          <title>Prévisualisation - Lettre de Titularisation</title>
          <style>
            body { font-family: 'Times New Roman', serif; margin: 40px; }
            .header { text-align: center; margin-bottom: 40px; }
            .content { line-height: 1.6; }
            .signature { margin-top: 100px; text-align: center; }
          </style>
        </head>
        <body>
          <div class="content">
            <pre>${previewContent}</pre>
          </div>
        </body>
        </html>
      `);
      previewWindow.document.close();
    }
  }

  resetForm(): void {
    if (confirm('Voulez-vous réinitialiser le formulaire ?')) {
      this.titularizationForm.reset();
      this.currentStep = 1;
      this.updateProgress();
      this.updateFormDate();
    }
  }

  get formControls() {
    return this.titularizationForm.controls;
  }

  isFieldInvalid(fieldName: string): boolean {
    const field = this.titularizationForm.get(fieldName);
    return field ? field.invalid && (field.dirty || field.touched) : false;
  }

  goToStep(step: number): void {
    if (step >= 1 && step <= this.totalSteps && step <= this.currentStep) {
      this.currentStep = step;
      this.updateProgress();
      this.scrollToTop();
    }
  }
}
<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 py-8 px-4">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-10">
      <div
        class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-r from-purple-600 to-blue-600 rounded-full mb-4"
      >
        <i class="fas fa-file-contract text-white text-2xl"></i>
      </div>
      <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-3">
